{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "ch main",
      "type": "shell",
      "command": "git",
      "args": [
        "checkout",
        "main",
      ],
      "presentation": {
        "reveal": "silent",
        "focus": false,
        "panel": "new",
        "close": true
      }
    },
    {
      "label": "ch",
      "type": "shell",
      "command": "git",
      "args": [
        "checkout",
        "${input:contest}",
      ],
      "presentation": {
        "reveal": "silent",
        "focus": false,
        "panel": "new",
        "close": true
      }
    },
    {
      "label": "commit",
      "type": "shell",
      "command": "pipenv",
      "args": [
        "run",
        "python",
        "main.py",
        "${file}"
      ],
      "options": {
        "cwd": "/workspaces/atcoder-python/tools/commit"
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      }
    },
    {
      "label": "download[hide]",
      "type": "shell",
      "command": "acc",
      "args": [
        "new",
        "${input:contest}",
      ],
      "options": {
        "cwd": "${workspaceFolder}/contest/"
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": true
      },
      "dependsOn": [
        "ch main"
      ],
      "hide": true
    },
    {
      "label": "download",
      "type": "shell",
      "command": "git",
      "args": [
        "checkout",
        "-b",
        "${input:contest}",
        "&&",
        "git",
        "add",
        ".",
        "&&",
        "git",
        "commit",
        "-m",
        "\"✨：${input:contest}\"",
      ],
      "options": {
        "cwd": "${workspaceFolder}/contest/${input:contest}/"
      },
      "presentation": {
        "reveal": "silent",
        "focus": false,
        "panel": "new",
        "close": true
      },
      "dependsOn": [
        "download[hide]",
      ]
    },
    {
      "label": "test",
      "type": "shell",
      "command": "oj",
      "args": [
        "t",
        "-c",
        "\"python ${file}\"",
        "-d",
        "${fileDirname}/tests/",
      ],
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": true
      }
    },
    {
      "label": "submit",
      "type": "shell",
      "command": "acc",
      "args": [
        "s",
        "${fileBasename}",
        "--",
        "-y",
        "--guess-python-interpreter",
        "pypy"
      ],
      "options": {
        "cwd": "${fileDirname}"
      },
      "dependsOn": [
        "test"
      ],
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": true
      }
    }
  ],
  "inputs": [
    {
      "id": "contest",
      "description": "contest:",
      "type": "promptString"
    }
  ]
}